<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_timetable_time"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textSize="8dp"
            android:paddingRight="4dp"
            android:textColor="#191919"
            android:text="1\n오전"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <ImageView
            android:id="@+id/tv_timetable_mon"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:src="@drawable/timetable_line"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <ImageView
            android:id="@+id/tv_timetable_tue"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/timetable_line" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <ImageView
            android:id="@+id/tv_timetable_wed"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/timetable_line"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <ImageView
            android:id="@+id/tv_timetable_thu"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/timetable_line"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <ImageView
            android:id="@+id/tv_timetable_fri"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/timetable_line"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <ImageView
            android:id="@+id/tv_timetable_sat"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/timetable_line"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <ImageView
            android:id="@+id/tv_timetable_sun"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:src="@drawable/timetable_line"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
    </LinearLayout>



</LinearLayout>