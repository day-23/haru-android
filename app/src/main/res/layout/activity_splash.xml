<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="39dp"
    android:background="@drawable/start_background">

    <ImageView
        android:id="@+id/splash_haru_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/haru_start_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="96dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/splash_haru_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="하나씩 이루어가는 습관,\n지금 하루와 함께하자!"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FDFDFD"
        app:layout_constraintTop_toBottomOf="@id/splash_haru_logo"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="39dp"/>

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/splash_haru_subtitle"
        android:src="@drawable/start_characters"/>

</androidx.constraintlayout.widget.ConstraintLayout>
