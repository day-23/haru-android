<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="39dp"
    android:background="@drawable/start_background">
    <ImageView
        android:id="@+id/login_haru_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/haru_start_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="96dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/login_haru_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="하나씩 이루어가는 습관,\n지금 하루와 함께하자!"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FDFDFD"
        app:layout_constraintTop_toBottomOf="@id/login_haru_title"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="39dp"/>

    <LinearLayout
        android:id="@+id/kakao_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_rect_radius_12"
        android:backgroundTint="@color/kakao_bg"
        app:layout_constraintTop_toBottomOf="@id/login_haru_subtitle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="38dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/minSize"
            android:id="@+id/kakao_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingVertical="9dp"
            android:drawableStart="@drawable/kakaotalk_logo"
            android:drawablePadding="10dp"
            android:text="카카오로 로그인하기"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/one_second_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/kakao_login_layout"
        app:layout_constraintRight_toRightOf="@id/kakao_login_layout"
        android:layout_marginRight="20dp"
        android:src="@drawable/one_second_login"
        />

    <TextView
        android:layout_width="172dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="1초만에 간편 로그인!"
        android:textColor="#1DAFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/one_second_login"
        app:layout_constraintRight_toRightOf="@id/kakao_login_layout"
        android:layout_marginRight="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/minSize"
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_radius_12"
        android:backgroundTint="@color/white"
        android:text="게스트로 로그인하기"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/todo_description"
        android:paddingVertical="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/kakao_login_layout"
        />



</androidx.constraintlayout.widget.ConstraintLayout>