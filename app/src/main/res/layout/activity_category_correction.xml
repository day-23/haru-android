<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_correction_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.calendar.CategoryCorrectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/correction_back_imageView"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/back_image"
            android:layout_width="28sp"
            android:layout_height="28sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageView
                android:id="@+id/correction_check_imageView"
                android:background="@drawable/check_image"
                android:layout_marginTop="5sp"
                android:layout_marginRight="20sp"
                android:layout_width="28sp"
                android:layout_height="28sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal">

        <EditText
            android:background="@android:color/transparent"
            android:id="@+id/correction_schedule_name"
            android:layout_marginLeft="34sp"
            android:layout_marginRight="34sp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#161616"
            android:text="테스트"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:text="이벤트 알림"
            android:textSize="16sp"
            android:textColor="#161616"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">

            <androidx.appcompat.widget.SwitchCompat
                style="@style/minSize"
                android:id="@+id/correction_event_alarm_switch"
                android:layout_marginTop="5sp"
                android:layout_width="58sp"
                android:layout_height="match_parent"
                android:thumb="@drawable/custom_switch_thumb"
                app:track="@drawable/custom_switch"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:text="색상 선택"
            android:textSize="16sp"
            android:textColor="#161616"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageView
                android:id="@+id/choise_category_color"
                android:background="@drawable/category_image"
                android:layout_marginTop="5sp"
                android:layout_width="28sp"
                android:layout_height="28sp"/>
        </LinearLayout>

    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_recyclerview"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_width="match_parent"
        android:layout_height="380sp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/category_delete_tv"
            android:text="카테고리 삭제하기"
            android:textSize="20sp"
            android:textColor="#F71E58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>