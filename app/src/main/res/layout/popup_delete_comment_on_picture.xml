<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_delete_comment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#80191919"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="30dp">

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="104dp"
        android:id="@+id/layout_parent_btn_update"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#4CDFDFFD"
        android:elevation="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/on_picture_delete_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_radius"
            android:gravity="center"
            android:text="코멘트를 삭제할까요? 이 작업은 복원할 수 없습니다."
            android:textColor="@color/date_text"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/on_picture_delete_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_radius_bottom"
            android:gravity="center"
            android:text="삭제하기"
            android:textColor="@color/delete_red"
            android:textSize="20sp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/on_picture_cancel"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/cancel_button_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:elevation="5dp"
        android:shadowColor="#00000029"
        android:textColor="@color/date_text"
        android:textSize="20sp" />


</androidx.constraintlayout.widget.ConstraintLayout>