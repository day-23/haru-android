<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.haru.viewmodel.TimetableViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFD"
        >

        <LinearLayout
            android:id="@+id/timetable_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#FDFDFD"
                >
                <ImageView
                    android:id="@+id/timetable_haru_title"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/haru_logo"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="#191919"
                    android:layout_alignParentTop="true"
                    />
                <ImageView
                    android:id="@+id/timetable_search_button"
                    android:layout_marginTop="3dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/search_icon"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:background="#FDFDFD"
            app:layout_constraintTop_toBottomOf="@id/timetable_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/timetable_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:textColor="#191919"
                    android:text="@{viewModel.Selected.year}"
                    android:gravity="center"
                    android:hint="2023년"/>

                <TextView
                    android:id="@+id/timetable_month"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"
                    android:text="@{viewModel.Selected.month}"
                    android:textSize="28dp"
                    android:textColor="#191919"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:hint="3월"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/___20513"
                    android:background="#00000000"
                    android:onClick="@{() -> viewModel.buttonClick()}"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/calendar_today_background_image">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@{viewModel.todayDay}"
                            android:textColor="#2CA4FF"
                            android:hint="1"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:background="#00000000"
                            android:onClick="@{() -> viewModel.todayClick()}"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/todolist_change"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity ="right"
                    android:src="@drawable/___20565"
                    android:background="#00000000"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="9dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="일"
                        android:textSize="12dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="#F71E58"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="월"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#191919"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="화"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#191919"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="수"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#191919"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="목"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#191919"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="금"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#191919"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="토"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#1DAFFF" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DBDBDB"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="7dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/sun_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:textColor="#F71E58"
                        android:text="@{viewModel.days.get(0)}"
                        android:hint="1"/>

                    <TextView
                        android:id="@+id/mon_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="@{viewModel.days.get(1)}"
                        android:textColor="#191919"
                        android:hint="2"/>

                    <TextView
                        android:id="@+id/tue_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="@{viewModel.days.get(2)}"
                        android:textColor="#191919"
                        android:hint="3"/>

                    <TextView
                        android:id="@+id/wed_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="@{viewModel.days.get(3)}"
                        android:textColor="#191919"
                        android:hint="4"/>

                    <TextView
                        android:id="@+id/thu_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="@{viewModel.days.get(4)}"
                        android:textColor="#191919"
                        android:hint="5"/>

                    <TextView
                        android:id="@+id/fri_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="@{viewModel.days.get(5)}"
                        android:textColor="#191919"
                        android:hint="6"/>

                    <TextView
                        android:id="@+id/sat_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:textColor="#1DAFFF"
                        android:text="@{viewModel.days.get(6)}"
                        android:hint="7"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/daysTable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:orientation="vertical"

                    >
                </LinearLayout>




            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/timetable_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFDFD">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/timetable_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:listitem="@layout/items_timetable"
                        />

                    <!--요일별 그리드-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:id="@+id/sun_table"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            >

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/mon_table"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tue_table"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/wed_table"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/thu_table"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/fri_table"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/sat_table"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">
                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>