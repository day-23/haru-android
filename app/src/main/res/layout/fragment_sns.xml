<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/sns_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/todo_table_selected">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <ImageView
                android:id="@+id/sns_haru_title"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/haru_logo"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="#191919"
                android:layout_alignParentTop="true"
                />
            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/___20513"
                android:layout_toEndOf="@id/sns_haru_title"
                android:layout_alignTop="@id/sns_haru_title"
                android:layout_alignBottom="@id/sns_haru_title"
                android:rotation="-90"/>

            <TextView
                android:id="@+id/my_records"
                android:layout_toStartOf="@id/search_button"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:paddingHorizontal="11dp"
                android:layout_marginHorizontal="11dp"
                android:paddingVertical="5dp"
                android:text="내 기록"
                android:textSize="16sp"
                android:textColor="#191919"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:background="@drawable/sns_my_record_border"
                />
            <ImageView
                android:id="@+id/search_button"
                android:layout_marginTop="3dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/search_icon"/>
        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/sns_buttons"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/sns_select_buttons"
        app:layout_constraintTop_toBottomOf="@id/sns_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        tools:ignore="MissingConstraints"
        android:visibility="gone"
        android:elevation="10dp">
        <TextView
            android:id="@+id/friend_feed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="#191919"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="친구피드"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"/>
        <TextView
            android:id="@+id/look_around"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="#191919"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="둘러보기"/>

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/sns_menu">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/post_of_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/add_post"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/add_sns_post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>