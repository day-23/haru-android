<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/item_month_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023년 3월"
                        android:textColor="@color/black"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:background="#FFFFFF"
                        android:drawableRight="@drawable/down_arrow"/>
                </FrameLayout>

                <ImageView
                    android:background="@drawable/calendar_category"
                    android:backgroundTint="@color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40sp"/>
            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/month_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:orientation="horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="373sp"
            android:layout_height="673sp"
            android:layout_gravity="right">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroud="@drawable/calendar_gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:textSize="20sp"
                    android:text="캘린더 보기 설정"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>