<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/category_drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/calendar_fragment_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/calendar_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FDFDFD"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#FDFDFD"
                        >
                        <ImageView
                            android:id="@+id/calendar_haru_title"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:src="@drawable/haru_logo"
                            android:layout_marginTop="2dp"
                            android:textStyle="bold"
                            android:textColor="#191919"
                            android:layout_alignParentTop="true"
                            />
                        <ImageView
                            android:id="@+id/calendar_search_button"
                            android:layout_marginTop="3dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/search_icon"/>
                    </RelativeLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_below="@id/calendar_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FDFDFD"
                    app:cardElevation="0dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#FDFDFD">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7">

                                <TextView
                                    android:id="@+id/item_month_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#FDFDFD"
                                    android:drawableRight="@drawable/down_arrow"
                                    android:text="2023년 3월"
                                    android:textColor="#191919"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />
                            </FrameLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:background="@drawable/calendar_today_background_image">

                                <TextView
                                    android:id="@+id/calendar_today_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6"
                                    android:textColor="#2CA4FF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <ImageView
                                android:id="@+id/category_button_imv"
                                android:background="@drawable/calendar_category"
                                android:layout_width="40dp"
                                android:layout_gravity="center"
                                android:layout_height="40dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#FDFDFD"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="일"
                                android:textColor="#F71E58"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="월"
                                android:textColor="#ACACAC"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="화"
                                android:textColor="#ACACAC"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="수"
                                android:textColor="#ACACAC"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="목"
                                android:textColor="#ACACAC"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="금"
                                android:textColor="#ACACAC"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="토"
                                android:textColor="#1DAFFF"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/month_viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="2dp"
                            android:background="#FDFDFD"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_add_todo_incalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_add_main_incalendar"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:visibility="invisible"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:maxImageSize="56dp"
                    app:srcCompat="@drawable/calendar_todo_add_btn"
                    app:tint="@null" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_add_main_incalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:maxImageSize="56dp"
                    app:srcCompat="@drawable/fab"
                    app:tint="@null" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="40dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="16"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:background="@drawable/category_up_border">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="카테고리 관리"
                            android:layout_marginLeft="24dp"
                            android:layout_gravity="center"
                            android:textColor="#FDFDFD"
                            android:textSize="24sp"/>
                    </LinearLayout>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#FDFDFD"
                        android:layout_weight="16">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/schedule_apply_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:id="@+id/schedule_apply_imv"
                                                android:layout_width="28dp"
                                                android:layout_height="28dp"
                                                android:background="@drawable/calendar_schedule_image" />

                                            <TextView
                                                android:id="@+id/schedule_apply_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="일정"
                                                android:layout_marginLeft="6dp"
                                                android:layout_gravity="center"
                                                android:textColor="#1DAFFF"
                                                android:textSize="16sp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:gravity="right">

                                            <ImageView
                                                android:id="@+id/category_add_image"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:foregroundGravity="right"
                                                android:src="@drawable/calendar_schedule_plus_image" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/category_recyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#DBDBDB"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                app:cardElevation="0dp"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/todo_apply_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/todo_apply_imv"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:background="@drawable/calendar_todo_image" />

                                        <TextView
                                            android:id="@+id/todo_apply_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="6dp"
                                            android:text="할일"
                                            android:textStyle="bold"
                                            android:textSize="16sp"
                                            android:textColor="#1DAFFF" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/todo_incomplete_layout"
                                        android:layout_marginTop="15dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="left">

                                        <ImageView
                                            android:id="@+id/todo_incomplete_imv"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:layout_gravity="center"
                                            android:background="@drawable/circle_uncheck" />

                                        <TextView
                                            android:id="@+id/todo_incomplete_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="14dp"
                                            android:layout_gravity="center"
                                            android:text="미완료"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="#191919" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/todo_complete_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="19dp"
                                        android:orientation="horizontal"
                                        android:gravity="left">

                                        <ImageView
                                            android:id="@+id/todo_complete_imv"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:layout_gravity="center"
                                            android:background="@drawable/circle_check" />

                                        <TextView
                                            android:id="@+id/todo_complete_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="14dp"
                                            android:layout_gravity="center"
                                            android:text="완료"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="#191919"/>
                                    </LinearLayout>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FDFDFD">

                        <TextView
                            android:id="@+id/all_blind_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:text="모두 가리기"
                            android:layout_marginBottom="27dp"
                            android:textColor="#646464" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/category_botton_border">
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.drawerlayout.widget.DrawerLayout>
    </RelativeLayout>
</layout>