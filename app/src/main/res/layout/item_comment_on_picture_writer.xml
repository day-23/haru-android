<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="33dp"
    android:background="@drawable/writer_info_container"
    android:elevation="10dp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_on_picture_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:elevation="10px"
        android:src="@color/black"
        tools:ignore="MissingConstraints" />
    
    <TextView
        android:id="@+id/comment_on_picture_name"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="유저명"
        android:maxLines="1"
        android:textColor="#191919"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/comment_on_picture_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/comment_on_picture_move_page"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/___20513"
        app:layout_constraintLeft_toRightOf="@id/comment_on_picture_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"

        android:rotation="270"/>


</androidx.constraintlayout.widget.ConstraintLayout>