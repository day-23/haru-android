<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/detail_todo_complete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_uncheck"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/todo_correction_btn"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_todo_content_tv"
                android:text="회 먹기"
                android:textSize="18sp"
                android:textColor="#191919"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/detail_todo_tags_tv"
                android:text="하루 종일"
                android:textColor="#191919"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/detail_todo_flag_imv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/star_uncheck"/>

    </LinearLayout>
</LinearLayout>