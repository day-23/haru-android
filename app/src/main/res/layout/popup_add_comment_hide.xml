<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_hide_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80191919"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_rect_radius_top_40">

        <View
            android:id="@+id/bold_line"
            android:layout_width="100dp"
            android:layout_height="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:background="@drawable/black_bar_radius" />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/bold_line"
            app:layout_constraintBottom_toTopOf="@id/hide_line">
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/hide_target_profile"
                android:layout_width="62dp"
                android:layout_height="62dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="85dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/default_profile"
                tools:ignore="MissingConstraints" />
            
            <TextView
                android:id="@+id/hide_target_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#191919"
                app:layout_constraintLeft_toRightOf="@id/hide_target_profile"
                app:layout_constraintTop_toTopOf="@id/hide_target_profile"
                android:layout_marginTop="9dp"
                android:layout_marginStart="20dp"
                android:text="이름"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/hide_target_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/hide_target_profile"
                app:layout_constraintTop_toBottomOf="@id/hide_target_name"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:text="1 분전"
                android:textColor="#191919"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/hide_target_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="110dp"
                android:textSize="20sp"
                android:textColor="#646464"
                android:text="content"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/hide_target_profile"
                android:layout_marginTop="20dp"/>

            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/hide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="105dp"
            android:background="#DBDBDB"/>

        <TextView
            android:id="@+id/hide_comment"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/hide_line"
            android:text="이 코멘트 숨기기"
            android:textSize="20sp"
            android:textColor="#1DAFFF"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>