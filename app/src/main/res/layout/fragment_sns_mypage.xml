    <LinearLayout
        android:id="@+id/sns_buttons"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/sns_select_buttons"
        app:layout_constraintTop_toBottomOf="@id/sns_menu"
        android:layout_marginTop="8dp"
        tools:ignore="MissingConstraints"
        android:visibility="gone"
        android:elevation="10dp">
        <TextView
            android:id="@+id/friend_feed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="친구피드"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"/>
        <TextView
            android:id="@+id/look_around"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="둘러보기"/>
    </LinearLayout>

    <!--프로필-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sns_menu"
        android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="62dp"
                android:layout_height="62dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="20dp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="102dp"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="이름"
                    android:textColor="#191919"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/profile_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#191919"
                    android:text="자기소개"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="98dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#646464"
                    android:background="@drawable/total_comment_index"
                    android:text="프로필 편집"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/profile_share"
                    android:layout_width="98dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#646464"
                    app:layout_constraintTop_toBottomOf="@id/edit_profile"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/total_comment_index"
                    android:text="프로필 공유"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        android:layout_marginTop="24dp">
        <!--하루-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="100dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/profile_post_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#191919"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="하루"
                android:textSize="14sp"
                android:textColor="#191919"/>
        </LinearLayout>

        <!--팔로워-->
        <LinearLayout
            android:id="@+id/profile_friends_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/profile_friends_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#191919"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="친구"
                android:textSize="14sp"
                android:textColor="#191919"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--피드선택-->
    <LinearLayout
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/status"
        android:layout_marginTop="38dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/mypage_show_feed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="내 피드"
                android:textColor="#1DAFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="7dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/todo_table_selected"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_show_media"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="미디어"
                android:textColor="#191919"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="7dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#F8F8FA"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feed_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/select"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/media_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/select"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/media_tags"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/custom_chip"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/media_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/media_tags"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_gallery_image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>