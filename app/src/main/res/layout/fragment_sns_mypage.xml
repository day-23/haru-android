<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/sns_menu"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/todo_table_selected"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="HARU"
            android:textColor="#191919"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginRight="8dp">
        </TextView>

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/___20513"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sns_buttons"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/sns_select_buttons"
        app:layout_constraintTop_toBottomOf="@id/sns_menu"
        android:layout_marginTop="8dp"
        tools:ignore="MissingConstraints"
        android:visibility="gone"
        android:elevation="10dp">
        <TextView
            android:id="@+id/friend_feed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="친구피드"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"/>
        <TextView
            android:id="@+id/look_around"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="둘러보기"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"/>

        <TextView
            android:id="@+id/my_records"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="내 기록" />
    </LinearLayout>

    <!--프로필-->
    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toBottomOf="@+id/sns_menu"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp">
        
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/drawofmomo"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="44dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="momo"
                    android:textColor="#191919"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="야옹"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="#191919"
                    android:textStyle="bold"
                    android:background="@drawable/todotable_item_border"
                    android:text="프로필 편집"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="#191919"
                    android:textStyle="bold"
                    android:background="@drawable/todotable_item_border"
                    android:text="프로필 공유"/>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="50dp">
        <!--하루-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#191919"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="하루"
                android:textSize="14dp"
                android:textColor="#191919"/>
        </LinearLayout>
        <!--팔로우-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#191919"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="팔로우"
                android:textSize="14dp"
                android:textColor="#191919"/>
        </LinearLayout>
        <!--팔로워-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#191919"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="팔로워"
                android:textSize="14dp"
                android:textColor="#191919"/>
        </LinearLayout>

    </LinearLayout>

    <!--피드선택-->
    <LinearLayout
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/status"
        android:layout_marginTop="38dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="내 피드"
                android:textColor="#1DAFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="7dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/todo_table_selected"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="미디어"
                android:textColor="#191919"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="7dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#F8F8FA"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feed_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/select"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>