<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfd">

    <LinearLayout
        android:id="@+id/sns_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/todo_table_selected"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/sns_haru_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/small_haru_title"
                android:backgroundTint="@color/white" />

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/sns_haru_title"
                android:layout_alignBottom="@id/sns_haru_title"
                android:layout_toEndOf="@id/sns_haru_title"
                android:rotation="-90"
                android:src="@drawable/___20513" />

            <TextView
                android:id="@+id/my_page_my_record"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="11dp"
                android:layout_toStartOf="@id/search_button"
                android:background="@drawable/sns_my_record_selected"
                android:gravity="center"
                android:paddingHorizontal="11dp"
                android:paddingVertical="5dp"
                android:text="내 기록"
                android:textColor="#FDFDFD"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/search_icon" />

            <ImageView
                android:id="@+id/mypage_back"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:src="@drawable/back_image"
                android:textColor="#191919"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mypage_setup"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/change_category_black"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sns_buttons"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/sns_select_buttons"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/sns_menu"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/friend_feed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="친구피드"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070" />

        <TextView
            android:id="@+id/look_around"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="둘러보기"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mypage_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sns_menu">

        <!--스크롤뷰 싸매기 위한 부모 레이아웃-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="390dp">

            <!--프로필-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="MissingConstraints" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="138dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="102dp"
                    android:layout_marginTop="9dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:text="이름"
                        android:textColor="#191919"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/profile_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        android:text="자기소개"
                        android:textColor="#191919"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/edit_profile"
                        android:layout_width="98dp"
                        android:layout_height="31dp"
                        android:background="@drawable/total_comment_index"
                        android:gravity="center"
                        android:text="프로필 편집"
                        android:textColor="#646464"
                        android:textSize="16sp"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/profile">
                <!--하루-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/profile_post_count"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#191919"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="하루"
                        android:textColor="#191919"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--팔로워-->
                <LinearLayout
                    android:id="@+id/profile_friends_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/profile_friends_count"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#191919"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="친구"
                        android:textColor="#191919"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--피드선택-->
            <LinearLayout
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:paddingHorizontal="20dp"
                android:background="#fdfdfd"
                app:layout_constraintTop_toBottomOf="@+id/status">

                <LinearLayout
                    android:id="@+id/mypage_show_feed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feed_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="내 피드"
                        android:textColor="#1DAFFF"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/feed_underline"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/todo_table_selected" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mypage_show_media"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/media_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="미디어"
                        android:textColor="#acacac"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/media_underline"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="#fdfdfd" />
                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feed_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/media_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/media_tags"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/custom_chip" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/media_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/media_tags"
                    tools:listitem="@layout/item_gallery_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>