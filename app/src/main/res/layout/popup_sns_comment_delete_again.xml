<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="30dp">

    <LinearLayout
        android:id="@+id/layout_parent_btn_update"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/layout_radius_20_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_radius"
            android:gravity="center"
            android:text="코멘트를 삭제할까요? 이 작업은 복원할 수 없습니다."
            android:textColor="@color/date_text"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sns_comment_real_delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/option_last_view_bg"
            android:gravity="center"
            android:text="@string/notRepeatTodoDelete"
            android:textColor="@color/delete_red"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sns_delete_cancel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/cancel_button_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/date_text"
        android:textSize="20sp" />


</LinearLayout>