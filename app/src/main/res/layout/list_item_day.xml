<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="calendar_item"
            type="com.example.haru.data.model.CalendarItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_day_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Integer.toString(calendar_item.date.date)}"
            android:alpha="@{calendar_item.alpha}"
            android:textColor="@{calendar_item.color}"
            android:textSize="16sp" />

        <ListView
            android:layout_gravity="center"
            android:id="@+id/day_content_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</layout>