<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="calendar_date"
            type="com.example.haru.data.model.CalendarDate" />
        <variable
            name="calendar_content"
            type="com.example.haru.data.model.ContentMark" />
        <variable
            name="date_or_content"
            type="Boolean" />
        <variable
            name="todo_cnt"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16sp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/text_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_day_text"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{date_or_content?Integer.toString(calendar_date.date.date):calendar_content.todo.content}"
                android:alpha="@{date_or_content?calendar_date.alpha:1.0f}"
                android:textColor="@{date_or_content?calendar_date.color:0}"
                android:textSize="14sp" />
        </FrameLayout>

    </LinearLayout>
</layout>