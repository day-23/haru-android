<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_post_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33191919"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_rect_radius_top_40">

        <View
            android:layout_width="100dp"
            android:layout_height="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:background="@drawable/black_bar_radius" />
        
        <TextView
            android:id="@+id/edit_or_hide"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#646464"
            android:text="이 게시글 숨기기"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="62dp"/>
        
        <View
            android:id="@+id/delete_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="106dp"
            android:background="#DBDBDB"/>
        
        <TextView
            android:id="@+id/delete_or_report"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/delete_line"
            android:layout_marginTop="20dp"
            android:text="이 게시글 신고하기"
            android:textSize="20sp"
            android:textColor="#F71E58"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>