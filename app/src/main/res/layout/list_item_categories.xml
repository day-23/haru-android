<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="28dp"
        android:layout_height="34dp">
        <ImageView
            android:id="@+id/category_Color"
            android:background="@drawable/category_image"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <TextView
        android:textColor="#191919"
        android:id="@+id/category_name"
        android:layout_marginLeft="14dp"
        android:text="test"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_correction"
            android:background="@drawable/update_icon"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"

            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <ImageView
            android:id="@+id/category_show_iv"
            android:background="@drawable/category_show_image"
            android:layout_marginTop="6dp"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

    </LinearLayout>

</LinearLayout>