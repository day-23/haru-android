<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="28dp"
        android:layout_height="34dp">
        <ImageView
            android:id="@+id/category_Color"
            android:background="@drawable/category_image"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/category_Color_outside"
            android:background="@drawable/category_image_outside"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <TextView
        android:textColor="#191919"
        android:id="@+id/category_name"
        android:layout_marginLeft="20dp"
        android:text="test"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_correction"
            android:background="@drawable/category_correction"
            android:layout_marginTop="6dp"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

    </LinearLayout>

</LinearLayout>