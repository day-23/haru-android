<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#33191919"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="30dp"
    android:clickable="true">

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="104dp"
        android:id="@+id/layout_parent_btn_update"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:background="@drawable/layout_radius_20_bg"
        android:backgroundTint="#FDFDFD"
        android:orientation="vertical">
        <TextView
            android:id="@+id/post_cancel_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_radius"
            android:gravity="center"
            android:text="게시글 작성을 취소할까요? 작성중인 내용은 삭제됩니다."
            android:textColor="@color/date_text"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sns_add_post_unsave"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_radius_bottom"
            android:gravity="center"
            android:text="삭제하기"
            android:textColor="@color/delete_red"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/sns_add_post_cancel"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:background="@drawable/cancel_button_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/date_text"
        android:textSize="20sp" />


</androidx.constraintlayout.widget.ConstraintLayout>