<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="tag"
            type="com.example.haru.data.model.Tag" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        android:paddingEnd="30dp"
        android:paddingBottom="9dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_tag_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/minSize"
            android:background="@drawable/tag_btn_custom"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:text="@{tag.content}"
            android:outlineProvider="none"
            android:textColor="@color/todo_description"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_set_tag_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/set_icon" />

    </LinearLayout>
</layout>