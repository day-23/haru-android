<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="60dp"
        tools:context=".view.auth.SignUpActivity">

        <ImageView
            android:layout_width="168.33dp"
            android:layout_height="84.74dp"
            android:layout_margin="13dp"
            android:src="@drawable/haru_logo_gradation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:text="하루 ID"
                android:textColor="@color/todo_description"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_signup_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:hint="ID를 입력해 주세요"
                android:textColor="#ACACAC"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="14dp"
                android:background="#DBDBDB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginBottom="58dp"
                android:text="하루 ID는 타 사용자가 나의 계정을 검색할 때 외에 노출되지 않습니다.\nID는 초기 생성 이후 변경이 가능합니다."
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:text="닉네임"
                android:textColor="@color/todo_description"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_signup_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:hint="최대 8글자를 입력해 주세요"
                android:textColor="#ACACAC"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="14dp"
                android:layout_marginBottom="99dp"
                android:background="#DBDBDB" />

            <android.widget.Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="99dp"
                android:background="@drawable/rounded_gradation_btn"
                android:backgroundTint="@null"
                android:padding="0dp"
                android:stateListAnimator="@null"
                android:text="프로필 생성 완료"
                android:textColor="#FDFDFD"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
