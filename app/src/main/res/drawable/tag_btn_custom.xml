
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@+id/tag_outer">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="120"
                android:endColor="#AAD7FF"
                android:startColor="#D2D7FF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:id="@+id/tag_inner"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <corners android:radius="9dp" />
        </shape>
    </item>
</layer-list> 